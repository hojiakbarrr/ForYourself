            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Название товара"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <EditText
