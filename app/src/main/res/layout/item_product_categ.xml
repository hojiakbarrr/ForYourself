<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginStart="@dimen/_7sdp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="@dimen/_9sdp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#77F3ECEC"
    app:cardMaxElevation="@dimen/_6sdp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/productImg_cat"
            android:layout_width="100dp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:src="@drawable/laundry" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">


            <View
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_3sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/gradient_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название: "
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сезон: "
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Категория: "
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цена (KGZ) : "
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/purple_700"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

                <TextView
                    android:id="@+id/cat_season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/purple_700"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

                <TextView
                    android:id="@+id/cat_categorya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/purple_700"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

                <TextView
                    android:id="@+id/cat_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="вкпвкп"
                    android:textColor="@color/purple_700"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="end|center"
        android:layout_width="43dp"
        android:layout_height="43dp">

        <ImageView
            android:id="@+id/buy_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/shoppingcart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
